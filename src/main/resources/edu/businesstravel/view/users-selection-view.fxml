<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.businesstravel.controllers.UserSelectionController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New"/>
                        <MenuItem mnemonicParsing="false" text="Open…"/>
                        <Menu mnemonicParsing="false" text="Open Recent"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Close"/>
                        <MenuItem mnemonicParsing="false" text="Save"/>
                        <MenuItem mnemonicParsing="false" text="Save As…"/>
                        <MenuItem mnemonicParsing="false" text="Revert"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Preferences…"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Quit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Undo"/>
                        <MenuItem mnemonicParsing="false" text="Redo"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Cut"/>
                        <MenuItem mnemonicParsing="false" text="Copy"/>
                        <MenuItem mnemonicParsing="false" text="Paste"/>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Select All"/>
                        <MenuItem mnemonicParsing="false" text="Unselect All"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About MyHelloApp"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox layoutX="190.0" layoutY="-44.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <VBox prefWidth="640.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label alignment="CENTER" style="&#10;" text="List utilisateur" textAlignment="CENTER"
                                       textFill="#9f9f9f" wrapText="false" VBox.vgrow="ALWAYS">
                                    <font>
                                        <Font size="18.0"/>
                                    </font>
                                </Label>
                                <HBox prefWidth="640.0" spacing="10.0">
                                    <children>
                                        <TextField fx:id="searchUserField" prefHeight="25.0" prefWidth="200.0"
                                                   HBox.hgrow="NEVER"/>
                                        <Button fx:id="searchUserBtn" mnemonicParsing="false" text="Rechercher"
                                                HBox.hgrow="NEVER"/>
                                        <Button fx:id="addUserBtn" mnemonicParsing="false" text="Ajouter"
                                                HBox.hgrow="NEVER"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <TableView fx:id="usersTableView" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="idColumn" maxWidth="50.0" minWidth="40.0" prefWidth="45.0"
                                             text="ID"/>
                                <TableColumn fx:id="nomColumn" maxWidth="120.0" minWidth="100.0" prefWidth="110.0"
                                             text="Nom"/>
                                <TableColumn fx:id="prenomColumn" maxWidth="150.0" minWidth="100.0" prefWidth="120.0"
                                             text="Prenom"/>
                                <TableColumn fx:id="roleColumn" maxWidth="120.0" minWidth="80.0" prefWidth="100.0"
                                             text="Role"/>
                                <TableColumn fx:id="ActionColumn" maxWidth="120.0" minWidth="80.0" prefWidth="100.0"
                                             text="Action"/>
                            </columns>
                        </TableView>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0"/>
                    </padding>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</VBox>
