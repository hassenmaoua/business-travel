<GridPane alignment="center" hgap="10" styleClass="grid-pane" stylesheets="@design.css" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.businesstravel.dao.controller.EventController">
    <Label text="Ajouter  événements" style="-fx-font-size: 24; -fx-font-weight: bold;" />

    <Label style="-fx-text-fill: #333333;" text="Title:" />
    <TextField fx:id="titleTextField" GridPane.columnIndex="1" />


    <Label style="-fx-text-fill: #333333;" text="Description:" GridPane.rowIndex="1" />
    <TextField fx:id="descriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label style="-fx-text-fill: #333333;" text="Date Début:" GridPane.rowIndex="2" />
    <DatePicker fx:id="dateDebutPicker" prefHeight="30.0" prefWidth="211.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label style="-fx-text-fill: #333333;" text="Date Fin:" GridPane.rowIndex="3" />
    <DatePicker fx:id="dateFinPicker" prefHeight="30.0" prefWidth="211.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label style="-fx-text-fill: #333333;" text="Region:" GridPane.rowIndex="4" />
    <TextField fx:id="regionTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label style="-fx-text-fill: #333333;" text="Adresse:" GridPane.rowIndex="5" />
    <TextField fx:id="adresseTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label style="-fx-text-fill: #333333;" text="Status:" GridPane.rowIndex="6" />
    <!-- Assuming Etat is an enumeration, you can use a ComboBox or a ChoiceBox here -->
    <ComboBox fx:id="statusComboBox" prefHeight="26.0" prefWidth="209.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="NEW" />
                <String fx:value="toDo" />
                <String fx:value="Done" />
                <String fx:value="Cancel" />
            </FXCollections>
        </items>
    </ComboBox>
    <Label style="-fx-text-fill: #333333;" text="Category:" GridPane.rowIndex="7" />
    <ComboBox fx:id="categoryComboBox" prefHeight="26.0" prefWidth="209.0" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <Button fx:id="submitButton" cache="true" layoutX="31.0" layoutY="1136.0" mnemonicParsing="false" onAction="#ajoutEvenement" prefHeight="16.0" prefWidth="210.0" text="Ajout evenement" textFill="#5850eb" GridPane.columnIndex="1" GridPane.rowIndex="8">
    </Button>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
