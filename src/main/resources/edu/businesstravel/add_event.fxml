<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<GridPane xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="grid-pane" stylesheets="@design.css">

    <Label text="Title:" style="-fx-text-fill: #333333;"/>
    <TextField fx:id="titleTextField" GridPane.columnIndex="1" />

    <Label text="Description:" GridPane.rowIndex="1" style="-fx-text-fill: #333333;"/>
    <TextField fx:id="descriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Date DÃ©but:" GridPane.rowIndex="2" style="-fx-text-fill: #333333;"/>
    <DatePicker fx:id="dateDebutPicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Date Fin:" GridPane.rowIndex="3" style="-fx-text-fill: #333333;"/>
    <DatePicker fx:id="dateFinPicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Region:" GridPane.rowIndex="4" style="-fx-text-fill: #333333;"/>
    <TextField fx:id="regionTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Adresse:" GridPane.rowIndex="5" style="-fx-text-fill: #333333;"/>
    <TextField fx:id="adresseTextField" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Status:" GridPane.rowIndex="6" style="-fx-text-fill: #333333;"/>
    <!-- Assuming Etat is an enumeration, you can use a ComboBox or a ChoiceBox here -->
    <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="NEW" />
                <String fx:value="toDo" />
                <String fx:value="Done" />
                <String fx:value="Cancel" />
            </FXCollections>
        </items>
    </ComboBox>
    <Label text="Category:" GridPane.rowIndex="7" style="-fx-text-fill: #333333;"/>
    <TextField fx:id="categoryTextField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

</GridPane>
