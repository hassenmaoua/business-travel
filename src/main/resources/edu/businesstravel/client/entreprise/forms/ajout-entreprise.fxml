<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="5.0" vgap="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.businesstravel.client.entreprise.forms.AjouterEntrepriseController">

    <padding>
        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
    </padding>

    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" />
        <ColumnConstraints hgrow="ALWAYS" />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
        <RowConstraints vgrow="NEVER" />
      <RowConstraints />
    </rowConstraints>

    <Label text="Nom Entreprise:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="nomEntrepriseField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Raison Sociale:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="raisonSocialeField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Adresse:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="adresseField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Secteur d'Activité:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <ComboBox fx:id="secteurActiviteComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Numéro de Téléphone:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextField fx:id="numeroTelephoneField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label text="Nombre D'employées:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextField fx:id="nbEmployeeField" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Button onAction="#ajouterEntreprise" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Enregistrer" GridPane.columnIndex="0" GridPane.rowIndex="7" />
</GridPane>
